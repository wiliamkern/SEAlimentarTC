<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEAlimentarTC.View.AlertsView"
             Title="Notificações"
             Visual="Material">
    <ContentPage.Content>
        <ScrollView>
            <Frame BackgroundColor="#E6E6E6" CornerRadius="30" Padding="20"  HasShadow="True" Margin="30">
                <StackLayout>
                    <Label Text="Notificações de refeições" FontAttributes="Bold" FontSize="23" HorizontalTextAlignment="Start" Padding="10"/>

                    <StackLayout Orientation="Horizontal" Margin="10,30,0,5" HorizontalOptions="Center">
                        <Label Text="Receber notificações de refeições" FontSize="Medium" VerticalOptions="Center"/>
                        <CheckBox  IsChecked="false" x:Name="ReceiveAlerts" VerticalOptions="Center"/>
                    </StackLayout>

                    <StackLayout VerticalOptions="EndAndExpand" Padding="30" HorizontalOptions="CenterAndExpand">
                        <Button Text="Salvar" WidthRequest="250" FontFamily="ArialRoundedMT" Clicked="SaveData" HeightRequest="60" BackgroundColor="#2C7733" CornerRadius="30"/>
                    </StackLayout>

                </StackLayout>
            </Frame>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>